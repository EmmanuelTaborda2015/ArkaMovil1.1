<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#3CF"
    android:alpha="0.6"
    android:weightSum="1">

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src= "@drawable/google"
        android:id="@+id/google"
        android:layout_gravity="center"
        android:layout_toStartOf="@+id/facebook"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignBottom="@+id/facebook"
        android:layout_toLeftOf="@+id/facebook" />

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src= "@drawable/facebook"
        android:id="@+id/facebook"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/twitter"
        android:layout_toStartOf="@+id/twitter" />

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src= "@drawable/twitter"
        android:id="@+id/twitter"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>